{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with ['OroFormBundle:Form:fields.html.twig'] %}

{% oro_title_set({params : {'%entityName%' : 'oro.cms.contentblock.entity_label'|trans, '%id%': entity.id} }) %}

{% set formAction = formAction|default(entity.id ? path('oro_cms_content_block_update', { 'id': entity.id }) : path('oro_cms_content_block_create')) %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('oro_cms_content_block_index'),
            'indexLabel': 'oro.cms.contentblock.entity_plural_label'|trans,
            'entityTitle': entity.titles|localized_value|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'oro.cms.contentblock.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('oro_cms_content_block_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if entity.id or resource_granted('oro_cms_content_block_create') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block content_data %}

    {% set dataBlocks = [{
        'title': 'oro.data_blocks.general.label'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.alias)
            ]
        }]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalField = form_row(child) %}
        {% if additionalField|length > 0 %}
            {% set additionalData = additionalData|merge([additionalField]) %}
        {% endif %}
    {% endfor %}

    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'Additional Information'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}

    {{ parent() }}
{% endblock content_data %}
