{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%title%": entity.title }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('oro_cms_page_index'),
        'indexLabel': 'oro.cms.page.entity_plural_label'|trans,
        'entityTitle': entity.title|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('oro_cms_page_create') %}
        {{ UI.button({
            'path' : path('oro_cms_page_create'),
            'iCss': 'icon-book',
            'aCss': 'btn-primary',
            'label': 'oro.ui.create_entity'|trans({'%entityName%': 'oro.cms.page.entity_label'|trans}),
            'title': 'oro.ui.create_entity'|trans({'%entityName%': 'oro.cms.page.entity_label'|trans})
        }) }}
    {% endif %}

    {{ parent() }}
{% endblock navButtons %}

{% block ownerLink %}{% endblock ownerLink %}

{% block content_data %}
    {% set pageInfo %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_cms_page_info', {id: entity.id}),
            'alias': 'page-info-widget'
        }) }}
    {% endset %}

    {% set pageContent %}
        <div class="row-fluid form-horizontal">
            <div class="responsive-block">
                {{ entity.content|raw }}
            </div>
        </div>
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'oro.cms.sections.general'|trans,
            'class': 'active',
            'subblocks': [{'data' : [pageInfo]}]
        },
        {
            'title': 'oro.cms.sections.content'|trans,
            'class': 'active',
            'subblocks': [{'data' : [pageContent]}]
        }
    ] %}

    {% set id = 'page-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}
    {{ parent() }}
{% endblock content_data %}
