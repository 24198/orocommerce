{% macro renderActionButton(action) %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    {{ UI.button({
        iCss: action.definition.frontendOptionsConfiguration.icon|default(''),
        class: action.definition.frontendOptionsConfiguration.class|default(''),
        label: action.definition.label,
        path: "javascript:void(0);"
    }) }}

    {{ UI.buttonSeparator() }}
{% endmacro %}
