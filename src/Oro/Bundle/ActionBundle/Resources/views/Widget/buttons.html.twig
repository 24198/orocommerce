{% set params = oro_action_widget_parameters() %}

{% if resource_granted('oro_actions') and has_actions(params) %}
    {% if params.entityId is defined %}
        {% set params = params|merge({'entityId' : params.entityId}) %}
    {% endif %}

    {{ oro_widget_render({
        'widgetType': 'buttons',
        'url': path('oro_action_widget_buttons', params),
        'alias': 'actions_buttons'
    }) }}
{% endif %}
