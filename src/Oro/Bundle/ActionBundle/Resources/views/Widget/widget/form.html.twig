{% set formComponentOptions = {
    'isSaved': saved,
    'wid': app.request.get('_wid')|raw,
} %}
<div class="widget-content">
    <div data-page-component-module="oroaction/js/app/components/form-component"
         data-page-component-options="{{ formComponentOptions|json_encode }}">
        {% if form.vars.errors|length > 0 %}
            <div class="alert alert-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <form method="post"
              data-nohash="true"
              data-disable-autofocus="true"
              id="{{ form.vars.id }}"
              name="{{ form.vars.name }}"
              action="{{ app.request.uri }}"
              class="form-dialog"
        >
            {{ form_widget(form) }}
            <div class="widget-actions form-actions">
                {% block page_container_form_actions %}
                    <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                    <button class="btn btn-primary" type="submit">{{ 'Submit'|trans }}</button>
                {% endblock %}
            </div>
        </form>
        {{ oro_form_js_validation(form) }}
    </div>
</div>
