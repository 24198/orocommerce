{% if actions|length %}
    <div class="widget-content">
        {% for action in actions %}
            <div class="btn-group">
                <a href="javascript:void(0);" title="{{ action.definition.label }}" class="btn icons-holder-text btn-primary">
                    <i class="icon-repeat"></i>
                    {{ action.definition.label }}
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}
