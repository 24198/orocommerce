{% block _page_footer_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " footer"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _footer_copyright_widget %}
    {% if block.vars.visible %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="copy">
                        {{ block_widget(block) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
