{% block oro_payment_credit_card_expiration_date_widget -%}
    {% set
    validation = {
    'credit-card-expiration-date-not-blank': {'message': 'oro.payment.validation.expiration_date', 'payload': null},
    'credit-card-expiration-date': {'message': 'oro.payment.validation.month', 'payload': null}
    }
    %}

    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-month">
            {{ form_widget(form.month, {'attr': {'data-expiration-date-month': true}}) }}
        </div>
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-year">
            {{ form_widget(form.year, {'attr': {'data-expiration-date-year': true}}) }}
        </div>
    </div>
{%- endblock %}

{% block oro_payment_method_config_widget %}
    {% if form.type.vars.value %}
        <div class="control-group control-group-choice">
            <div class="control-label wrap">
                {{ form_label(form.type) }}
            </div>
            <div class="controls">
                <input type="text" disabled="disabled" value="{{ methods_labels[form.type.vars.value]|trans }}"/>
                {{ form_widget(form.type) }}
            </div>
        </div>
    {% endif %}
    {{ form_widget(form.options) }}
    {{ form_rest(form) }}
{% endblock %}

{% block oro_payment_methods_configs_rule_destination_widget %}
    {{ form_row(form.country) }}
    {{ form_row(form.region) }}
    {{ form_row(form.postalCodes) }}
    {{ form_rest(form) }}
{% endblock %}
