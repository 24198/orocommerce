{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

<div class="widget-content">
    {% block widget_content %}
        {% set renderParams = {
            'enableViews': false,
            'enableToggleFilters': false,
            'toolbarOptions': {
                'selectedProducts': {
                    'eventName': eventName
                }
            }
        } %}
        {{ dataGrid.renderGrid('product-collection-add-products-grid', parameters, renderParams) }}

        <fieldset class="form-horizontal">
            <div class="widget-actions form-actions" style="display: none;">
                <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>

                <button data-action-name="addProducts" type="button" class="btn disabled" disabled="disabled">{{ 'Add'|trans }}</button>
            </div>
        </fieldset>
    {% endblock %}
</div>
