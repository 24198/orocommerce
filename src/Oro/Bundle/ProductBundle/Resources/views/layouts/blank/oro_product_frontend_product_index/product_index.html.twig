{% block _category_picture_widget %}
    {% import 'OroProductBundle::image_macros.html.twig' as Image %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': ' category-picture__image',
        alt: currentCategory.defaultTitle
    }) %}

    {% if currentCategory.largeImage %}
        {% set attr = layout_attr_defaults(attr, {
            src: Image.url(currentCategory.largeImage, 'product_original')
        }) %}

        <div class="category-picture">
            <img {{ block('block_attributes') }}>
        </div>
    {% endif %}
{% endblock %}

{% block _product_search_navigation_widget %}
    <div class="breadcrumbs" data-page-component-module="oroproduct/js/app/components/breadcrumbs-navigation-block">
        <span class="breadcrumbs__item path-info">
            {{ block('container_widget') }}
        </span>
        <span class="filters-info"></span>
    </div>
{% endblock %}

{% block _category_title_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' category-title'
    }) %}

    <h1 {{ block('block_attributes') }}>
        {{ currentCategory.defaultTitle }}
    </h1>
{% endblock %}
