    }) %}
    <div {{ block('block_attributes') }}>
        <div class="product-item__primary-half product-item__primary-half_<%= themeOptions.currentRowView %>">
            {{ block_widget(block) }}
        </div>
    </div>
{% endblock %}

{% block __product_grid_row_number_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__number product-item__number_<%= themeOptions.currentRowView %>"
    }) %}
    <div {{ block('block_attributes') }}>
        Item #: <span class="red"><%= model.sku %></span>
    </div>
{% endblock %}

{% block __product_grid_row_specification_widget %}
