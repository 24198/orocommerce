{% block __product_grid_row_more_info_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " oro-more-info-toggler oro-more-info-toggler_<%= themeOptions.currentRowView %>"
    }) %}
    <div {{ block('block_attributes') }}>
        <i class="cf-play"></i>
        <a href="#" data-more-info-expand>More Info</a>
        <div class="oro-more-info-toggler__container" data-more-info>
            <ul class="oro-more-info-toggler__list oro-more-info-toggler__list_<%= themeOptions.currentRowView %>">
                <li><span class="text-uppercase">Mspr:</span> $24.99</li>
                <li>Shipping Weight: .08 lbs.</li>
                <li>80 Items to a Box</li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block __line_item_form_start_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'id': form.vars.id ~ '-product-id-<%= model.id %>',
    }) %}
    {{ block('form_start_widget') }}
{% endblock %}

{% block __line_item_form_fields_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__qty__current-grid",
        'data-page-component-module': "oroproduct/js/app/components/product-unit-select-component"
    }) %}
    <% if (!_.isEmpty(model.product_units)) { %>
    <div {{ block('block_attributes') }} data-product-units='<%= JSON.stringify(model.product_units) %>'>
        {{ block_widget(block) }}
    </div>
    <% } %>
{% endblock %}

{% block __line_item_form_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__qty product-item__qty_<%= themeOptions.currentRowView %>"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __line_item_buttons_widget %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if block.children is not empty %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': " add-product-from-view-component "
        }) %}
        <div {{ block('block_attributes') }}>
            {{ UI.pinnedDropdownButton({
                'html': block_widget(block),
                'dataAttributes': {
                    'layout': 'separate'
                },
                'options': {
                    'widgetModule': 'oroproduct/js/content-processor/product-add-to-dropdown-button',
                    'widgetName': 'productAddToDropdownButtonProcessor',
                    'truncateLength': 25,
                    'groupContainer': '<div class="btn btn-block btn-dark btn_has-dropdown btn_has-dropdown_lg width-auto"></div>',
                    'appendToBody': true
                }
            }) }}
        </div>
    {% endif %}
{% endblock %}
