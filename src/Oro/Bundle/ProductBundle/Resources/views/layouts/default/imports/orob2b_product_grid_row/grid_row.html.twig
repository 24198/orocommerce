{% block __product_grid_row_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-page-component-module': 'oroui/js/app/components/view-component',
        '~data-page-component-options': {
            view: 'oroproduct/js/app/views/base-product-view'
        },
        'data-layout': 'separate'
    }) %}
    <script id="template-grid-row" type="text/template">
        <div {{ block('block_attributes') }}>
            {{ block("container_widget") }}
        </div>
    </script>
{% endblock %}

{% block __product_grid_row_image_holder_widget %}
    {% import 'OroProductBundle::image_macros.html.twig' as Image %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__image-holder product-item__image-holder_<%= themeOptions.currentRowView %>"
    }) %}
    <div {{ block('block_attributes') }}>
        {% set noImageUrl = Image.url(null, 'product_large') %}
        <a href="<%= model.view_link %>" class="view-product" style="background-image: url('<% if (model.image) { %><%= model.image %><% } else { %>{{ noImageUrl }}<% } %>')"></a>
    </div>
{% endblock %}

{% block __product_grid_row_quick_view_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__quick-view-btn",
        'data-toggle': 'modal',
        'data-target': '#product',
    }) %}
    <div {{ block('block_attributes') }}>
        <span class="btn btn-dark btn_sm">Quick View</span>
    </div>
{% endblock %}

{% block __product_grid_cell_name_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " product-item__title product-item__title_<%= themeOptions.currentRowView %>"
    }) %}
    <h3 {{ block('block_attributes') }}>{{ block("container_widget") }}</h3>
{% endblock %}

{% block __product_grid_cell_name_value_widget %}
    <a href="<%= model.view_link %>" class="view-product"><%= model.name %></a>
{% endblock %}

{% block __product_grid_row_primary_content_container_widget %}
