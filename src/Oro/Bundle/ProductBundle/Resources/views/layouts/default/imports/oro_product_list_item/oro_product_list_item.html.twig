{% block __oro_product_list_item__product_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-page-component-module': 'oroui/js/app/components/view-component',
        '~data-page-component-options': {
            view: 'oroproduct/js/app/views/base-product-view',
            modelAttr: product|default({})
        },
        'data-layout': 'separate'
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_product_list_item__product_image_holder_widget %}
    {% import 'OroProductBundle::image_macros.html.twig' as Image %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item__image-holder product-item__image-holder_{{ class_prefix }}'
    }) %}
    <div {{ block('block_attributes') }}>
        {% set productImage = product.imagesByType('main')|length > 0 ? product.imagesByType('main').first.image : null %}
        <a href="{{ path('orob2b_product_frontend_product_view', {id: product.id}) }}" class="view-product"
           style="background-image: url('{{ Image.url(productImage, 'product_large') }}')">
        </a>
    </div>
{% endblock %}

{% block __oro_product_list_item__product_quick_view_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item__quick-view-btn',
        'data-toggle': 'modal',
        'data-target': '#product',
    }) %}
    <div {{ block('block_attributes') }}>
        <span class="btn btn-dark btn_sm">Quick View</span>
    </div>
{% endblock %}

{% block __oro_product_list_item__product_title_widget %}
