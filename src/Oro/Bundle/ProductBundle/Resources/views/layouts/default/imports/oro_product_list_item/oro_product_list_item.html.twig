{% block __oro_product_list_item__product_line_item_form_buttons_widget %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if block.children is not empty %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': ' add-product-from-view-component '
        }) %}
        <div {{ block('block_attributes') }}>
            {{ UI.pinnedDropdownButton({
                'html': block_widget(block),
                'mobileEnabled': true,
                'dataAttributes': {
                    'layout': 'separate'
                },
                'options': {
                    'widgetModule': 'oroproduct/js/content-processor/product-add-to-dropdown-button',
                    'widgetName': 'productAddToDropdownButtonProcessor',
                    'truncateLength': 25,
                    'groupContainer': '<div class="btn btn-block btn-dark btn_has-dropdown btn_has-dropdown_lg width-auto"></div>',
                    'appendToBody': true
                }
            }) }}
        </div>
    {% endif %}
{% endblock %}
