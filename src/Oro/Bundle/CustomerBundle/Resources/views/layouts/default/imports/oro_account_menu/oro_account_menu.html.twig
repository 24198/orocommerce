{% block _account_sidebar_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' account-menu'
    }) %}
    <div {{ block('block_attributes') }}>
        {% if isMobileVersion() %}
            <div class="collapse-view"
                data-page-component-module="oroui/js/app/components/jquery-widget-component"
                data-page-component-options="{{ {
                    widgetModule: 'oroui/js/widget/collapse-widget',
                    storageKey: id
                }|json_encode() }}"
            >
                <div class="account-menu__section">
                    <h3 class="account-menu__title" data-collapse-trigger>
                        {{ 'oro.customer.frontend.menu.account_user_profile.label'|trans }}
                        <i class="icon-plus"></i>
                        <i class="icon-minus"></i>
                    </h3>
                    <div class="collapse-view__container" data-collapse-container>
                        {{ block_widget(block) }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="account-menu__section">
                <h3 class="account-menu__title">
                    {{ 'oro.customer.frontend.menu.account_user_profile.label'|trans }}
                </h3>
                {{ block_widget(block) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block _account_sidebar_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' account-menu__list'
    }) %}
    <ul {{ block('block_attributes') }}>
        {% set requestUrl = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
        {% set found = false %}

        {% for child in block if child.vars.visible %}
            {% set currentUrl = path(child.vars.route_name, child.vars.route_parameters) %}

            <li class="account-menu__item {% if currentUrl in requestUrl and not found %}account-menu__item--current{% endif %}">
                {{ block_widget(child, {
                    attr: layout_attr_defaults(child.vars.attr, {
                        '~class': ' account-menu__link'
                    })
                }) }}
            </li>

            {% if currentUrl in requestUrl and not found %}
                {% set found = true %}
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}

{% block _account_sidebar_sign_out_widget %}
    <a {{ block('block_attributes') }} href="{{ path(route_name) }}"><i class="icon-signout"></i> {{ text|trans }}</a>
{% endblock %}
