{% extends 'OroFrontendBundle:layouts/default:form_theme.html.twig' %}

{% block oro_frontend_country_widget %}
    <div>
        {{ form_widget(form, {'class_prefix': 'checkout'}) }}
    </div>
{% endblock %}

{% block oro_frontend_region_widget %}
    {% set regionView = 'orocheckout/js/region/view' %}

    <div>
        {{ block('oro_region_widget') }}
    </div>
{% endblock %}

{%- block form_label -%}
    {% set label_attr = layout_attr_defaults(attr, {
        '~class': ' label label--full'
    }) %}

    {{ parent() }}
{%- endblock form_label -%}

{%- block form_row -%}
    <div class="checkout__form__col {{ parentClass|default('form__col_x6') }}">
        {{- form_label(form, null, {'class_prefix': 'checkout'}) -}}
        {{- form_widget(form, {'class_prefix': 'checkout'}) -}}
        {{- form_errors(form, {'class_prefix': 'checkout'}) -}}
    </div>
{%- endblock form_row -%}

{% block checkbox_row %}
    {{- form_widget(form) -}}
    {{- form_errors(form) -}}
{% endblock %}
