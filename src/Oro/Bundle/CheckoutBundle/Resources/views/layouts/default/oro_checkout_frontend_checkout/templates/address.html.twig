{% macro address_form(address_form, save_address_checkbox, hasCustomAddress) %}
    <div id="checkout-address-fields-container" class="grid {% if not hasCustomAddress %}hidden{% endif %}">
        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.label, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.label'|trans}}) }}
            {{ form_row(address_form.namePrefix, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.prefix'|trans}}) }}
        </fieldset>

        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.firstName, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.first_name'|trans}}) }}
            {{ form_row(address_form.middleName, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.middle_name'|trans}}) }}
        </fieldset>
        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.lastName, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.last_name'|trans}}) }}
            {{ form_row(address_form.nameSuffix, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.name.sufix'|trans}}) }}
        </fieldset>

        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.organization, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.organization'|trans}}) }}
            {{ form_row(address_form.phone, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.phone'|trans}}) }}
        </fieldset>

        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.street, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.street'|trans}}) }}
            {{ form_row(address_form.street2, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.street2'|trans}}) }}
        </fieldset>

        <fieldset class="grid__row grid__row--offset-none">
            {{ form_row(address_form.city, {'attr': {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.city'|trans}}) }}

            {{ form_row(address_form.country, {'parentClass': 'grid__column--2'}) }}
            {{ form_row(address_form.region, {'parentClass': 'grid__column--2'}) }}

            <div class="grid__column grid__column--offset-y grid__column--2 col-zip-error">
                {{- form_label(address_form.postalCode) -}}
                {{- form_widget(address_form.postalCode, {'attr' : {'placeholder': 'oro.checkout.workflow.b2b_flow_checkout.form.placeholder.address.zip'|trans}, 'parentClass': 'grid__column--12'}) -}}

                <div class="col-zip-error">
                    {{- form_errors(address_form.postalCode) -}}
                </div>
            </div>
        </fieldset>

        <fieldset class="grid__row grid__row--offset-none">
            <div class="grid__column">
                {{ form_row(save_address_checkbox) }}
            </div>
        </fieldset>

        <fieldset class="hidden">
            {{ form_widget(address_form.id) }}
            {{ form_widget(address_form.region_text) }}
        </fieldset>
    </div>
{% endmacro %}
