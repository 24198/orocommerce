{% block _search_row_widget %}
    <input type="radio" id="header-row-search" class="header-row-helper" name="dropdowns" hidden="hidden">
    <div class="header-row__container hidden-on-desktop">
        <label class="header-row__trigger hidden-on-desktop" for="header-row-search">
            <div class="nav-trigger">
                <span class="nav-trigger__icon nav-trigger__icon--transparent nav-trigger__icon--large">
                    <span class="cf-search cf--gray cf--no-offset"></span>
                </span>
            </div>
        </label>
        <div class="header-row__toggle">
            <div class="header-row__dropdown" data-header-row-search-container></div>
        </div>
    </div>
{% endblock %}

