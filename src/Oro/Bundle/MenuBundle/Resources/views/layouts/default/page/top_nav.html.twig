{% block _top_nav_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " topbar"
    }) %}
    <div {{ block('block_attributes') }}>
        <div class="container-fluid">
            <div class="row">
                {{ block_widget(block) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block _top_nav_widget %}
    {% spaceless %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': " topbar__navigation topbar__navigation--has-sibling"
        }) %}

        <nav {{ block('block_attributes') }}
        >
            {{ block_widget(block) }}
        </nav>
    {% endspaceless %}
{% endblock %}

{% block _top_nav_menu_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " col-md-7 col-sm-7 text-right"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}


{% block _top_nav_controls_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " col-md-5 col-sm-5"
    }) %}
    {% set move_options =  {
        responsive: [
            {
                breakpoint: 990,
                moveTo: '[data-main-menu-container]'
            }
        ]}|json_encode
    %}

    <div {{ block('block_attributes') }}>
        <nav class="topbar__navigation"
             data-move-block
             data-move-options="{{ move_options }}"
        >
            <ul>
                {{ block_widget(block) }}
            </ul>
        </nav>
    </div>
{% endblock %}
