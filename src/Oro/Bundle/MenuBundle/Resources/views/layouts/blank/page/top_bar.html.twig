{% block _top_nav_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " topbar grid__row"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _top_nav_widget %}
    {% spaceless %}
        {% set attr = layout_attr_defaults(attr, {
        '~class': " topbar__navigation topbar__navigation--has-sibling"
        }) %}

        <nav {{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </nav>
    {% endspaceless %}
{% endblock %}

{% block _top_nav_controls_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " grid__column grid__column--5"
    }) %}

    <div {{ block('block_attributes') }}>
        <nav class="topbar__navigation">
            <ul class="primary-menu">
                {{ block_widget(block) }}
            </ul>
        </nav>
    </div>
{% endblock %}

{% block _top_nav_menu_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " grid__column grid__column--7 text-right"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
