{% block _top_nav_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " topbar grid__row"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _top_nav_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " topbar-navigation topbar__navigation--has-sibling"
    }) %}

    {% set child_attr = layout_attr_defaults(child_attr, {
    '~class': ' topbar-navigation__item'
    }) %}

    {% set link_attr = layout_attr_defaults(link_attr, {
    '~class': 'topbar-navigation__link'
    }) %}

    {{ block('menu_widget') }}
{% endblock %}

{% block _top_nav_controls_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " grid__column grid__column--5"
    }) %}

    <div {{ block('block_attributes') }}>
        <ul class="primary-menu topbar-navigation topbar-navigation--controls">
            {{ block_widget(block) }}
        </ul>
    </div>
{% endblock %}

{% block _top_nav_menu_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
    '~class': " grid__column grid__column--7 text-right"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
