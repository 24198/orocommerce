{% import 'OroUIBundle::macros.html.twig' as UI %}
{% if  resource_granted('EDIT', entity) %}
    {% set dialogTitle %}
        {{ 'oro.order.entity_label'|trans }} #{{ entity.identifier|default('N/A'|trans) }} - {{ 'oro.order.shipping_trackings.label'|trans }}
    {% endset %}
    {{ UI.clientButton({
        'dataUrl': path('oro_order_shipping_tracking_change', {'id': entity.id}),
        'aCss': 'no-hash btn',
        'iCss': 'icon-list-alt',
        'label' : 'oro.order.widgets.shipping_tracking'|trans,
        'widget' : {
            'type' : 'dialog',
            'multiple' : false,
            'options' : {
                'dialogOptions' : {
                    'stateEnabled': false,
                    'incrementalPosition': false,
                    'title' : dialogTitle,
                    'allowMaximize': true,
                    'allowMinimize': true,
                    'dblclick': 'maximize',
                    'maximizedHeightDecreaseBy': 'minimize-bar',
                    'width': 500,
                }
            }
        }
    }) }}
{% endif %}
