{% macro renderPossibleShippingMethods(
    form,
    events = {},
    component = 'oroorder/js/app/components/possible-shipping-methods-component',
    savedShippingMethod = null
) %}
    <div data-page-component-module="{{ component }}"
         {% if events|length > 0 %}
            data-page-component-options="{{ { events: events, savedShippingMethod: savedShippingMethod }|json_encode }}"
         {% endif %}>
        <div class="btn-group">
            <span id="possible_shipping_methods_btn" class="btn">{{ 'oro.order.btn.calculate_shipping'|trans }}</span>
        </div>
        <div class="possible_shipping_methods_form" data-content="possible_shipping_methods_form"></div>
        {{ form_row(form.calculateShipping) }}
        {{ form_row(form.shippingMethod) }}
        {{ form_row(form.shippingMethodType) }}
        {{ form_row(form.estimatedShippingCostAmount) }}
    </div>
{% endmacro %}
