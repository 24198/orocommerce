{% set qtySold = record.getValue('qtySold') %}
{% set unitCode = record.getValue('unitCode') %}
<table>
    <tr>
        <td class="renderable">
            {% if qtySold %}
                {{ qtySold }} {{ unitCode|oro_format_product_unit_label(false, qtySold > 1)|capitalize }}
            {% else %}
                {{ 'N/A'|trans }}
            {% endif %}
        </td>
    </tr>
</table>
