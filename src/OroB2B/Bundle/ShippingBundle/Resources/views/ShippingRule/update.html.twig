{% extends 'OroUIBundle:actions:update.html.twig' %}

{% oro_title_set({params : {"%id%": entity.id|default('N/A'|trans)} }) %}

{% set formAction = entity.id ? path('orob2b_shipping_rule_update', { 'id': entity.id }) : path('orob2b_shipping_rule_create')  %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('orob2b_shipping_rule_update', {'id': entity.id}),
        'indexLabel': 'orob2b.shipping.shippingrule.entity_plural_label'|trans,
        'entityTitle': entity.name|slice(0, 50)
        } %}
        {{ parent() }}
    {% else %}
        {% set breadcrumbs = {
            'indexLabel': 'Create',
            'entityTitle': 'Shipping Rule',
            'indexPath': path('orob2b_shipping_rule_create')
        } %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.shipping.shippingrule.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block navButtons %}
    {{ parent() }}

    {#{{ UI.cancelButton(path('orob2b_shipping_rule_index')) }}#}
    {% set html = UI.saveAndCloseButton() %}
    {% if entity.id or resource_granted('orob2b_shipping_rule_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block content_data %}
    {% set id = 'shipping-rule-edit' %}
    {% set generalData = [
        form_row(form.name),
        form_row(form.enabled),
        form_row(form.priority),
        form_row(form.currency),
        form_row(form.conditions),
        form_row(form.configurations, {'attr': {'class': 'orob2b-shipping-config-collection'}}),
    ] %}

    {% set generalBlock = {
        'title': 'orob2b.shipping.sections.general'|trans,
        'class': 'active',
        'subblocks': [
            {
                'data': generalData
            },
            {
                'title': 'orob2b.shipping.sections.rule_destination'|trans,
                'data': [
                    form_widget(form.shippingDestinations, {'attr': {'class': 'orob2b-shipping-destination-collection'}}),
                ]
            },
        ]
    } %}

    {% set dataBlocks = [
        generalBlock
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    } %}

    {{ parent() }}
{% endblock %}
