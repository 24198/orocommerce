{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}
{% import 'OroEmailBundle::actions.html.twig' as EmailActions %}
{% import 'OroB2BFrontendBundle::macros.html.twig' as Frontend %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orob2b.frontend.rfp.request.first_name.label'|trans, entity.firstName) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.last_name.label'|trans, entity.lastName) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.email.label'|trans, entity.email)}}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.phone.label'|trans, entity.phone) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.company.label'|trans, entity.company|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.role.label'|trans, entity.role|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.po_number.label'|trans, entity.poNumber|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.ship_until.label'|trans, entity.shipUntil|oro_format_date|default('N/A'|trans)) }}
            {{ Frontend.renderAccountUserProperty('orob2b.frontend.rfp.request.account_user.label'|trans, entity.accountUser) }}
            {{ UI.renderProperty('orob2b.frontend.rfp.request.status.label'|trans, entity.status.label) }}
            {{ Frontend.renderAccountUsersProperty('orob2b.frontend.rfp.request.assigned_account_users.label'|trans, entity.assignedAccountUsers) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
</div>
