{% extends 'OroB2BFrontendBundle:actions:update.html.twig' %}

{% oro_title_set({params : {'%entityName%': 'orob2b.rfp.request.entity_label'|trans, "%label%": entity.label|default('N/A'|trans)} }) %}

{% set formAction = path('orob2b_rfp_request_process') %}

{% block navButtons %}
    {% set html = UI.saveAndCloseButton('orob2b.rfp.btn.create_rfp'|trans) %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.rfp.request.entity_label'|trans}) %}
    {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'request-edit' %}

    {% set dataBlocks = [{
            'title': 'orob2b.rfp.sections.general'|trans,
            'class': 'active',
            'subblocks': [{
                'data': [
                    form(form)
                ]
            }]
        }]
    %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
