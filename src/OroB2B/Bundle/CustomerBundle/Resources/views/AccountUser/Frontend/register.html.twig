{% extends 'OroB2BCustomerBundle:AccountUser/Frontend:layout.html.twig' %}

{% block content %}
<div class="container">
    <h1>{{ 'orob2b.customer.accountuser.profile.registration.title'|trans }}</h1>
    <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ path('orob2b_customer_frontend_account_user_register') }}"
          method="{{ form.vars.method }}" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <div>
            <button type="submit" class="btn btn-primary">{{ 'orob2b.customer.accountuser.profile.register'|trans }}</button>
            <a href="{{ path('orob2b_customer_account_user_security_login') }}" class="btn">{{ 'Cancel'|trans }}</a>
        </div>
    </form>

    {{ oro_form_js_validation(form) }}
</div>
{% endblock content %}
