{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%email%": entity.email }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_user_admin_user_index'),
        'indexLabel': 'orob2b.useradmin.user.entity_plural_label'|trans,
        'entityTitle': entity.email|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_user_admin_user_update', { 'id': entity.id }),
            'entity_label': 'orob2b.useradmin.user.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_user_admin_delete_frontenduser', {'id': entity.id}),
            'dataRedirect': path('orob2b_user_admin_user_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.useradmin.user.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set userInformationWidget %}
    {{ oro_widget_render({
        'widgetType': 'block',
        'title': 'orob2b.useradmin.widgets.user_information'|trans,
        'url': path('orob2b_user_admin_user_info', {id: entity.id})
    }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [userInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2b.useradmin.sections.general'|trans,
            'class': 'active',
            'subblocks': generalSectionBlocks
        }
    ] %}

    {% set id = 'productView' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}

{% block stats %}
    {# Must be empty, because parent view uses this block to render dates, which are not implemented in this entity #}
{% endblock stats %}