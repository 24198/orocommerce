{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({
    params : {
        "%email%": form.vars.value.email|default('N/A'|trans),
        "%entityName%": 'orob2b.useradmin.user.entity_label'|trans
    }
}) %}

{% set formAction = form.vars.value.id ? path('orob2b_user_admin_user_update', { 'id': form.vars.value.id }) : path('orob2b_user_admin_user_create')  %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_user_admin_delete_frontenduser', {'id': form.vars.value.id}),
            'dataRedirect': path('orob2b_user_admin_user_index'),
            'aCss': 'no-hash remove-button',
            'dataId': form.vars.value.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.useradmin.user.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('orob2b_user_admin_user_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('orob2b_user_admin_user_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orob2b_user_admin_user_index'),
            'indexLabel': 'orob2b.useradmin.user.entity_plural_label'|trans,
            'entityTitle': form.vars.value.email|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.useradmin.user.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'user-edit' %}

    {% set formRows = [
        form_row(form.enabled),
        form_row(form.firstName),
        form_row(form.lastName),
        form_row(form.email),
        form_widget(form.plainPassword, { 'attr': {'class': 'password'} }),
        form_row(form.customer),
    ] %}

    {% if form.passwordGenerate is defined %}
        {% set formRows = formRows|merge([
            form_row(form.passwordGenerate, { 'attr': {'class': 'password-trigger'} })
        ]) %}
        <span data-page-component-module="orob2buseradmin/js/app/components/password-generate"
              data-page-component-options="{{ {class: 'password-trigger', targetClass: 'password'}|json_encode }}"></span>
    {% endif %}

    {% if form.sendEmail is defined %}
        {% set formRows = formRows|merge([
            form_row(form.sendEmail)
        ]) %}
    {% endif %}

    {% set dataBlocks = [{
            'title': 'orob2b.useradmin.sections.general'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': formRows
            }]
        }]
    %}

    {% set userGroups %}
        {{ form_row(form.groups, {attr: { class: 'horizontal' } }) }}
    {% endset %}

    {% set dataBlocks = dataBlocks|merge( [{
        'title': 'orob2b.useradmin.sections.groups'|trans,
        'subblocks': [
            {
                'title': null,
                'data': [userGroups]
            }
        ]
    }] ) %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
