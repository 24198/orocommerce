{% block _checkout_sidebar_widget %}
    {% set attr = attr|merge({class: attr.class|default('') ~ " checkout-sidebar"}) %}
    <aside class="sidebar sidebar_left">
        <div {{ block('block_attributes') }}>
            <ul class="checkout-navigation">
                {% set isComplete = true %}
                {% for key, step in steps %}
                    {% set pageNum = key+1 %}
                    {% set isCurrent = currentStep.name == step.name %}
                    {% if isCurrent %}
                        {% set isComplete = false %}
                    {% endif %}
                    <li {{ isComplete ? 'class="past-step"' : '' }}>
                        {% set badgeClass = 'badge_ll_gray' %}
                        {% if isComplete %}
                            {% set badgeClass = 'badge_complete' %}
                        {% elseif isCurrent %}
                            {% set badgeClass = 'badge_orange' %}
                        {% endif %}
                        <span class="badge badge_xmd badge_circle {{ badgeClass }}">
                            {% if isComplete %}
                                <i class="icon-check"></i>
                            {% else %}
                                {{ pageNum }}
                            {% endif %}
                        </span>
                        <h3 class="checkout-navigation__title">{{ step.label|trans }}</h3>
                        {% set attr = attr|merge({class: attr.class|default('') ~ " checkout-navigation__content"}) %}
                        <div {{ block('block_attributes') }}>
                            {% set informationBlockId = step.name ~'_information' %}
                            {{ block_widget(block.offsetGet(informationBlockId), {'checkout': checkout}) }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </aside>
{% endblock %}

