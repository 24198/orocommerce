{% block _checkout_shipping_method_widget %}
    <div class="checkout__head">
        <h2 class="checkout__title">
            <span class="badge badge_md badge_circle badge_orange">3</span>
            {{ workflowStep.label|trans }}
        </h2>
    </div>
    <div class="checkout__body">
        <form action="#" class="checkout__form">
            <fieldset class="checkout__form__row">
                <div class="checkout__form__col form__col_x6">
                    <span class="checkout__form__label">Select a Shipping Method<sup class="red">*</sup></span>
                    <div class="checkout__form__radio">
                        <label class="radio_custom radio_custom_blue checked" data-radio="">
                            <input type="radio" name="shippingMethod" checked="checked">
                            <i class="material-icons radio_checked fs18 mmr5-md">radio_button_checked</i>
                            <i class="material-icons radio_not-checked fs18 mmr5-md">radio_button_unchecked</i>
                            <span class="checkbox_custom__text fs13">USPS Ground - $19.75</span>
                        </label>
                    </div>
                    <div class="checkout__form__radio">
                        <label class="radio_custom radio_custom_blue" data-radio="">
                            <input type="radio" name="shippingMethod">
                            <i class="material-icons radio_checked fs18 mmr5-md">radio_button_checked</i>
                            <i class="material-icons radio_not-checked fs18 mmr5-md">radio_button_unchecked</i>
                            <span class="checkbox_custom__text fs13">USPS Express - $45.87</span>
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset class="checkout__form__row">
                <div class="create-account__form__req-text"><sup>*</sup>{{ 'orob2b.checkout.workflow.b2b_flow_checkout.form.required.label'|trans }}</div>

                {% if block.checkout_continue is defined %}
                    <div class="create-account__form__col form__col_x12">
                        {{ block_widget(block.checkout_continue) }}
                    </div>
                {% endif %}
            </fieldset>
            {% if block.checkout_back is defined %}
                <div class="checkout__form__back">
                    {{ block_widget(block.checkout_back) }}
                </div>
            {% endif %}
        </form>
    </div>
{% endblock %}
