{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEmailBundle::actions.html.twig' as EmailActions %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orob2b.rfpadmin.request.first_name.label'|trans, entity.firstName) }}
            {{ UI.renderProperty('orob2b.rfpadmin.request.last_name.label'|trans, entity.lastName) }}
            {{ UI.renderHtmlProperty('orob2b.rfpadmin.request.email.label'|trans, EmailActions.sendEmailLink(entity.email, entity))}}
            {{ UI.renderProperty('orob2b.rfpadmin.request.phone.label'|trans, entity.phone) }}
            {{ UI.renderProperty('orob2b.rfpadmin.request.company.label'|trans, entity.company ? entity.company : 'N/A') }}
            {{ UI.renderProperty('orob2b.rfpadmin.request.role.label'|trans, entity.role ? entity.role : 'N/A') }}
            {{ UI.renderProperty('orob2b.rfpadmin.request.status.label'|trans, entity.status.label) }}
        </div>
    </div>
</div>
