{% block _header_row_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " header-row"
    }) %}

    <div class="container-fluid">
        <div {{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </div>

        <input type="radio" id="header-row-overlay" class="header-row-helper" name="dropdowns" checked="checked" hidden="hidden">
        <label class="header-row-overlay" for="header-row-overlay"></label>
    </div>
{% endblock %}

{% block _header_row_links_widget %}
    <input type="radio" id="header-row-links" class="header-row-helper" name="dropdowns" hidden="hidden">
    <div class="header-row__container header-row__container--unstack">
        <label class="header-row__trigger hidden-on-desktop" for="header-row-links">
            <div class="nav-trigger">
                <span class="nav-trigger__icon nav-trigger__icon--transparent nav-trigger__icon--large">
                    <span class="cf-menu cf--gray cf--no-offset"></span>
                </span>
            </div>
        </label>
        <div class="header-row__toggle">
            <div class="header-row__dropdown-mobile">
                {{ block_widget(block) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block _header_row_shopping_widget %}
<input type="radio" id="header-row-shopping" class="header-row-helper" name="dropdowns" hidden="hidden">
<div class="header-row__container">
    <label class="header-row__trigger" for="header-row-shopping">
        <div class="nav-trigger">
            <span class="nav-trigger__icon nav-trigger__icon--chromatic">
                <span class="cf-clipboard cf--base-line cf--no-offset"></span>
            </span>
            <span class="nav-trigger__count">2</span>
            <p class="nav-trigger__text">
                Shopping Lists
                <span class="cf-down-open-mini"></span>
            </p>
        </div>
    </label>
    <div class="header-row__toggle hidden-on-desktop">
        <div class="header-row__dropdown">
            {{ block_widget(block) }}
        </div>
    </div>
</div>
{% endblock %}

{% block _main_menu_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " main-menu"
    }) %}

    <ul {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </ul>
{% endblock %}

{% block _main_menu_widget %}
    {% spaceless %}
        {% for child in item.children -%}
            <li class="main-menu__item">
                <a href="{{ app.request.getUriForPath(child.uri) }}" class="main-menu__link">
                    <span>{{ child.label }}</span>
                </a>
            </li>
        {%- endfor %}
    {% endspaceless %}
{% endblock %}

{% block _main_menu_widgets_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " main-menu__list main-menu__list--nested"
    }) %}
    <li><ul {{ block('block_attributes') }}>{{ block_widget(block) }}</ul></li>
{% endblock %}

{% block _main_menu_messages_widget_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " main-menu__item main-menu__item--nested"
    }) %}
    <li {{ block('block_attributes') }}>
        <button class="messages-widget__trigger" data-oro-mpa-trigger>
            <span class="badge badge_xs badge_circle badge_blue messages-widget__badge">3</span>
            <span class="badge badge_md badge_circle badge_dark"><i class="cf-comment"></i></span>
            <span class="messages-widget__title text-uppercase">Messages</span>
            <i class="cf-down-open-mini"></i>
        </button>
    </li>
{% endblock %}
