{% block __orob2b_account_address_grid__addresses_head_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " oro-grid__row"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __orob2b_account_address_grid__addresses_head_title_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " oro-grid__column oro-grid__column-half"
    }) %}
    <div {{ block('block_attributes') }}>
        <h2 class="user-page-title">
            <span class="badge badge_sm badge_circle badge_orange badge_has-inline-sibling">
                <i class="icon-map-marker"></i>
            </span>
            {{ block_widget(block) }}
        </h2>
    </div>
{% endblock %}

{% block __orob2b_account_address_grid__addresses_create_button_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " btn btn_xsm btn-dark oq-group-btn"
    }) %}
    {{ block_widget(block, {
        attr: attr
    }) }}
{% endblock %}

{% block __orob2b_account_address_grid__datagrid_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " oro-grid__row oro-grid__row--has-twin-row oro-grid__row--has-child-grid"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
