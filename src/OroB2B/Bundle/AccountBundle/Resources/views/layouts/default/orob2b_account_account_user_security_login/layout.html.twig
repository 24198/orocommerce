{% extends 'OroB2BAccountBundle:layouts/blank/orob2b_account_account_user_security_login:layout.html.twig' %}

{% block _login_form_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'id': 'form-login'
    }) %}
    {{ parent() }}
    <script type="text/javascript">
        require(['jquery', 'jquery.validate'],
        function ($) {
            $('#form-login').validate({});
        });
    </script>
{% endblock %}

{% block _login_form_username_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-validation': {"NotBlank":{"payload":null}}
    }) %}
    {{ parent() }}
{% endblock %}

{% block _login_form_password_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-validation': {"NotBlank":{"payload":null}}
    }) %}
    {{ parent() }}
{% endblock %}
