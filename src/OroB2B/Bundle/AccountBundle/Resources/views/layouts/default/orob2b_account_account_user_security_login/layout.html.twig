{% block _login_page_widget %}
    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _login_form_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' login-form'
    }) %}

    <form id="form-login"
          action="{{ path('orob2b_account_account_user_security_check') }}"
          method="post"
         {{ block('block_attributes') }}
    >
        {{ block_widget(block) }}
    </form>

    <script type="text/javascript">
        require(['jquery', 'jquery.validate'],
        function ($) {
            $('#form-login').validate({});
        });
    </script>
{% endblock %}

{% block _login_form_username_widget %}
    {% set attr = {
        required: 'required',
        autofocus: true,
        'data-validation': {"NotBlank":{"payload":null}}|json_encode
        }|merge(attr)|merge({
            class: attr.class|default('') ~ " input"
    }) %}

    {% set label_attr = label_attr|merge({
        class: label_attr.class|default('') ~ " label"
    }) %}

    <div class="grid__row grid__row--offset-m">
        {{ block_row(block, {
            attr: attr,
            label_attr: label_attr
        }) }}
    </div>
{% endblock %}

