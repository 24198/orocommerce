{%- macro renderAccountProperty(label, entity, property, route) -%}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if entity %}
        {{ UI.renderHtmlProperty(label, _self.renderViewLink(entity, attribute(entity, property|default('name')), route|default('orob2b_account_view'))) }}
    {% endif %}
{%- endmacro -%}

