{%- macro renderAccountProperty(label, entity, labelProperty, route) -%}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if entity %}
        {{ UI.renderHtmlProperty(label, UI.entityViewLink(entity, attribute(entity, labelProperty|default('name')), route|default('orob2b_account_view'))) }}
    {% endif %}
{%- endmacro -%}

{%- macro renderAccountUserProperty(label, entity, labelProperty, route) -%}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if entity %}
        {{ UI.renderHtmlProperty(label, UI.entityViewLink(entity, attribute(entity, labelProperty|default('fullName')), route|default('orob2b_account_account_user_view'))) }}
