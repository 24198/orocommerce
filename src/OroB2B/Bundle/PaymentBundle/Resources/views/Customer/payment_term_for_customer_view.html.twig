{% import 'OroUIBundle::macros.html.twig' as UI %}

<div class="row-fluid form-horizontal">
    <div class="responsive-block">
        {% if customerGroupPaymentTerm %}
            {% if is_granted('VIEW', customerGroupPaymentTerm) %}
                {% set customerGroupPaymentTermData %}
                    <a href="{{ path('orob2b_payment_term_view', {id: customerGroupPaymentTerm.id}) }}">
                        {{ customerGroupPaymentTerm.label }}
                    </a>
                {% endset %}
                {{ UI.renderHtmlProperty('orob2b.payment.customer.payment_term_defined_in_group'|trans, customerGroupPaymentTermData) }}
            {% else %}
                {{ UI.renderProperty('orob2b.payment.customer.payment_term_defined_in_group'|trans, customerGroupPaymentTerm.label) }}
            {% endif %}
        {%  else %}
            {{ UI.renderHtmlProperty('orob2b.payment.customer.payment_term_non_defined_in_group'|trans, 'orob2b.payment.paymentterm.empty_value'|trans) }}
        {% endif %}
    </div>
</div>
