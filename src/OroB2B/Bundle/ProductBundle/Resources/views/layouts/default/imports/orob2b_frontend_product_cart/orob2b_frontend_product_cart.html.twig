{% block __orob2b_frontend_product_cart__wrapper_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-page-component-module': 'oroui/js/app/components/view-component',
        '~data-page-component-options': {
            view: 'orob2bproduct/js/app/views/base-product-view'
        }|json_encode,
        'data-layout': 'separate',
        '~class': ''
    }) %}

    {{ block_widget(block) }}
{% endblock %}

{% block __orob2b_frontend_product_cart__template_widget %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __orob2b_frontend_product_showing__image_holder_widget %}
    {% import 'OroB2BProductBundle::image_macros.html.twig' as Image %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item__image-holder product-item__image-holder_<%= themeOptions.currentRowView %>'
    }) %}

    <div {{ block('block_attributes') }}>
        {% set noImageUrl = Image.url(null, 'product_large') %}
        <a href="<%= model.view_link %>"
           class="view-product"
           style="background-image: url('<% if (model.image) { %><%= model.image %><% } else { %>{{ noImageUrl }}<% } %>')"></a>
    </div>
{% endblock %}

{% block __orob2b_frontend_product_showing__quick_view_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' product-item__quick-view-btn',
        'data-toggle': 'modal',
        'data-target': '#product'
    }) %}

    <div {{ block('block_attributes') }}>
        <span class="btn btn-dark btn_sm">Quick View</span>
    </div>
{% endblock %}

{% block __orob2b_frontend_product_showing__name_widget %}
