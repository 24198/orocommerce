    </div>
{% endblock %}

{% block _product_grid_row_specification_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product__specification product__specification_<%= themeOptions.view %> mb2-md"
    }) %}
    <div {{ block('block_attributes_raw_class') }}>{{ block_widget(block) }}</div>
{% endblock %}

{% block _product_grid_row_sku_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " table borderless paddingless mb0-md mb0-sm"
    }) %}
    <table {{ block('block_attributes_raw_class') }}>
        <tbody>
        <tr>
            <td>Item #:</td>
