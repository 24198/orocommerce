{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'products-grid' %}
{% set pageTitle = 'orob2b.product.entity_plural_label'|trans %}

{% block navButtons %}
    {% if resource_granted('orob2b_product_create') %}
        {{ UI.addButton({
            'path': path('orob2b_product_create'),
            'entity_label': 'orob2b.product.entity_label'|trans
        }) }}
    {% endif %}
{% endblock %}

{% block content_datagrid %}
    {% set parameters = {} %}

    {% set renderParams = {
        'enableFullScreenLayout': true,
        'enableViews': false
    } %}

    {% set renderParamsTypes = {
        'enableFullScreenLayout': 'bool',
        'enableViews': 'bool'
    } %}

    {% set widgetRouteParameters = {
        'gridName': gridName,
        'parameters': parameters,
        'renderParams': renderParams,
        'renderParamsTypes': renderParamsTypes
    } %}

    {{ oro_widget_render({
        'widgetType': 'block',
        'url': path('oro_datagrid_widget', widgetRouteParameters),
        'title': '',
        'alias': 'products-grid-widget'
    }) }}
{% endblock %}
