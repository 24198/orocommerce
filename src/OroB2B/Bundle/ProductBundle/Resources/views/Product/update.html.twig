{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {"%sku%": form.vars.value.sku|default('N/A')} }) %}

{% set formAction = form.vars.value.id ? path('orob2b_product_update', { 'id': form.vars.value.id }) : path('orob2b_product_create')  %}

{% block navButtons %}
    {{ UI.cancelButton(path('orob2b_product_index')) }}
    {{ UI.saveAndCloseButton('Save'|trans) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orob2b_product_index'),
            'indexLabel': 'orob2b.product.entity_plural_label'|trans,
            'entityTitle': form.vars.value.sku|default('N/A')
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.product.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'product-edit' %}

    {% set dataBlocks = [{
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.sku)
                ]
            }]
        }]
    %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}