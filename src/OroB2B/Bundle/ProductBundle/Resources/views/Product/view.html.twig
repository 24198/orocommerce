{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%sku%": entity.sku }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_product_index'),
        'indexLabel': 'orob2b.product.entity_plural_label'|trans,
        'entityTitle': entity.sku|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_product_update', { 'id': entity.id }),
            'entity_label': 'orob2b.product.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_delete_product', {'id': entity.id}),
            'dataRedirect': path('orob2b_product_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.product.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set productInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.product.widgets.product_information'|trans,
            'url': path('orob2b_product_info', {id: entity.id})
        }) }}
    {% endset %}
    {% set productVisibilityWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('orob2b_product_visibility', {id: entity.id})
        }) }}
    {% endset %}


    {% set generalSectionBlocks = [{'data' : [productInformationWidget]}]%}
    {% set visibilitySectionBlocks = [{'data' : [productVisibilityWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2b.product.sections.general'|trans,
            'class': 'active',
            'subblocks': generalSectionBlocks
        },
        {
            'title': 'orob2b.product.sections.visibility'|trans,
            'subblocks': visibilitySectionBlocks
        }
    ] %}

    {% set id = 'productView' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
