{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.defaultName.string|default('N/A'|trans)}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_product_frontend_product_index'),
        'indexLabel': 'orob2b.product.entity_plural_label'|trans,
        'entityTitle': entity.defaultName
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block ownerLink %}{% endblock ownerLink %}

{% block pageActions %}
    {% placeholder view_pageActions_before with {entity: entity} %}

    {% set audit_entity_id = audit_entity_id is defined ? audit_entity_id : entity.id|default %}
    {% if audit_entity_id %}
        {% placeholder frontend_history_block with {
        'entity': entity,
        'entity_class': audit_entity_class|default(null),
        'id': audit_entity_id,
        'title': audit_title|default(entity.__toString is defined ? entity : null),
        'audit_path': audit_path|default('orob2b_frontend_entity_audit'),
        'audit_show_change_history': audit_show_change_history|default(false)
        } %}
    {% endif %}

    {% placeholder view_pageActions_after with {entity: entity} %}
{% endblock pageActions %}

{% block content_data %}
    {% set productInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('orob2b_product_frontend_product_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'orob2b.product.sections.general'|trans,
            'class': 'active',
            'subblocks': [{'data' : [productInformationWidget]}]
        }
    ] %}

    {% set id = 'frontend-product-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
