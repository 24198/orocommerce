{% set currencyTemplate %}
<div class="oro-clearfix">
    <input
            type="checkbox"
            id="oro_currency_selection_<%- ftid %>-uid-<%- uid %>"
            name="oro_currency_selection[]"
            data-ftid="oro_currency_selection_<%- ftid %>"
            value="<%- value %>"
            checked="checked">
    <label for="oro_currency_selection_<%- ftid %>-uid-<%- uid %>"><%- text %><em>&nbsp;</em></label>
</div>
{% endset %}

{% set pageComponentOptions = {
    'priceListSelector': '#' ~ priceList.vars.id,
    'currenciesSelector': '#' ~ currencies.vars.id,
    'showTierPricesSelector': '#' ~ showTierPrices.vars.id,
    'currencyTemplate': currencyTemplate,
} %}

<div
        data-page-component-module="orob2bpricing/js/app/components/product-sidebar-component"
        data-page-component-options="{{ pageComponentOptions|json_encode }}"
        >
    <div class="sidebar-item sidebar-minimized" style="display: none;"><i class="icon-double-angle-right controll-maximize"></i></div>
    <div class="sidebar-item sidebar-maximized"><i class="icon-double-angle-left controll-minimize"></i></div>
    <div class="sidebar-item sidebar-maximized default-price-list-choice">{{ form_row(priceList) }}</div>
    <div class="sidebar-item sidebar-maximized currencies">{{ form_row(currencies) }}</div>
    <div class="sidebar-item sidebar-maximized show-tier-prices-choice">{{ form_row(showTierPrices) }}</div>
</div>
