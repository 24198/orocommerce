{% block _product_grid_row_price_widget %}
    {% set attr = attr|merge({
    class: attr.class|default('') ~ " product-item__price product-item__price_<%= themeOptions.view %> mt1-md mb1-md mt1-sm mb1-sm"
    }) %}
    <div {{ block('block_attributes') }}>
        <% if (model.price_column) { %>
        {{ 'orob2b.pricing.frontend.pricelist.index.your_price'|trans }} <span class="fs16 blue"><%= model.price_column %></span> / <%= model.price_unit_column %>
        <% } %>
    </div>
{% endblock %}

