{% set pageComponentOptions = {
    '_wid': app.request.get('_wid'),
    'savedId': savedId is defined and savedId ? savedId : null
} %}
<div class="widget-content"
     data-page-component-module="orob2bpricing/js/app/components/widget-form-component"
     data-page-component-options="{{ pageComponentOptions|json_encode }}"
>
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ app.request.uri }}" {{ form_enctype(form) }}
          method="{{ form.vars.method }}" data-collect="true" class="form-dialog">
        <fieldset class="form-horizontal">
            {{ form_row(form.product) }}
            {{ form_row(form.quantity) }}
            {{ form_row(form.unit) }}
            {{ form_row(form.price) }}
        </fieldset>

        <div class="hidden">
            {{ form_rest(form) }}
        </div>

        <div class="widget-actions">
            <button type="reset" class="btn">{{ 'Cancel'|trans }}</button>
            <button type="submit" class="btn btn-success">{{ 'Save'|trans }}</button>
        </div>
    </form>
    {{ oro_form_js_validation(form) }}
</div>
