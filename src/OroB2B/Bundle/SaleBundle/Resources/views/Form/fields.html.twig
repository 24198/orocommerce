{% block orob2b_sale_quote_product_widget %}
    <div class="sale-quote-product-widget control-group">
        {% if label is not sameas(false) %}
            {{ form_label(form.product, '' , { label_attr: label_attr|merge({ class: 'control-label' })}) }}
        {% endif %}
        <div class="controls{% if errors|length > 0 %} validation-error{% endif %}">
            {{ form_widget(form.product) }}
            {{ form_errors(form.product) }}
        </div>
        <div class="sale-quote-product-item-collection{% if errors|length > 0 %} validation-error{% endif %}">
            {{ form_row(form.quoteProductItems) }}
        </div>
    </div>
{% endblock %}

{% block orob2b_sale_quote_product_collection_row %}
    <div class="sale-quote-product-collection">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block orob2b_sale_quote_product_item_collection_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block orob2b_sale_quote_product_item_widget %}
    <table class="sale-quote-product-item-widget">
        <tr>
            <td>{{ form_widget(form.quantity) }}<td>
            <td>{{ form_widget(form.productUnit) }}<td>
            <td colspan="2">{{ form_widget(form.price) }}<td>
        </tr>
        <tr>
            <td>{{ form_errors(form.quantity) }}</td>
            <td>{{ form_errors(form.productUnit) }}</td>
            <td colspan="2">{{ form_errors(form.price) }}</td>
        </tr>
    </table>
{% endblock %}

{% block orob2b_sale_quote_product_collection_widget %}
    {% set add_label = 'orob2b.sale.quote.quoteproduct.add_label' %}
    {{ block('orob2b_sale_collection_widget') }}
{% endblock %}

{% block orob2b_sale_quote_product_item_collection_widget %}
    {% set add_label = 'orob2b.sale.quote.quoteproduct.quoteproductitem.add_label' %}
    {{ block('orob2b_sale_collection_widget') }}
{% endblock %}


