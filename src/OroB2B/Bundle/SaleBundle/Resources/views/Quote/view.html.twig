{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {'%id%': entity.qid }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_sale_quote_index'),
        'indexLabel': 'orob2b.sale.quote.entity_plural_label'|trans,
        'entityTitle': entity.qid|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_sale_quote_update', {'id': entity.id}),
            'entity_label': 'orob2b.sale.quote.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_sale_delete_quote', {'id': entity.id}),
            'dataRedirect': path('orob2b_sale_quote_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.sale.quote.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set quoteInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.sale.quote.widgets.quote_information'|trans,
            'url': path('orob2b_sale_quote_info', {'id': entity.id})
        }) }}
    {% endset %}
    {% set quoteProducts %}
        <div class="sale-quoteproducts-info control-group">
            <table class="sale-quoteproduct-collection-table sale-quoteproduct-collection-table-view">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Type</th>
                        <th>Offers</th>
                    </tr>
                </thead>
                <tbody>
                {% for quoteProduct in entity.quoteProducts %}
                    <tr>
                        <td>
                            <div>
                                {% if quoteProduct.product %}
                                    <a href="{{ path('orob2b_product_view', { id: quoteProduct.product.id }) }}">{{ quoteProduct.product|raw }}</a>
                                {% else %}
                                    {{ quoteProduct.productSku|raw }}
                                {% endif %}
                            </div>
                            {% if quoteProduct.type is same as(constant('OroB2B\\Bundle\\SaleBundle\\Entity\\QuoteProduct::TYPE_NOT_AVAILABLE')) %}
                                <div>
                                    <div>{{ 'orob2b.sale.quoteproduct.product_replacement.label'|trans }}</div>
                                    {% if quoteProduct.productReplacement %}
                                        <a href="{{ path('orob2b_product_view', { id: quoteProduct.productReplacement.id }) }}">{{ quoteProduct.productReplacement|raw }}</a>
                                    {% else %}
                                        {{ quoteProduct.productReplacementSku|raw }}
                                    {% endif %}
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            {{ quoteProduct.typeTitle|trans }}
                        </td>
                        <td class="sale-quoteproductitems-info">
                            {% if quoteProduct.quoteProductRequests and quoteProduct.type is not same as(constant('OroB2B\\Bundle\\SaleBundle\\Entity\\QuoteProduct::TYPE_OFFER')) %}
                                <table>
                                    <tr>
                                        <th>{{ 'orob2b.sale.quoteproductrequest.quantity.label'|trans }}</th>
                                        <th>{{ 'orob2b.sale.quoteproductrequest.price.label'|trans }}</th>
                                        <th>{{ 'orob2b.sale.quoteproductrequest.column_summary'|trans }}</th>
                                    </tr>
                                    {% for quoteProductRequest in quoteProduct.quoteProductRequests %}
                                        <tr>
                                            <td>{{ quoteProductRequest.quantity is null ? 'N/A'|trans : quoteProductRequest.quantity ~ ' ' ~ quoteProductRequest.productUnit }}</td>
                                            <td>{{ quoteProductRequest.price is null ? 'N/A'|trans : quoteProductRequest.price|oro_format_price }}</td>
                                            <td>{{ quoteProductRequest|orob2b_format_sale_quote_product_request }}</td>
                                        </tr>
                                    {% endfor %}
                                    <tr>
                                        <td colspan="3">{{ UI.renderProperty(
                                                'orob2b.sale.quoteproduct.comment_customer.label'|trans,
                                                quoteProduct.commentCustomer|default('N/A'|trans)
                                            ) }}</td>
                                    </tr>
                                    </table>
                            {% endif %}

                            <table>
                                <tr>
                                    <th>{{ 'orob2b.sale.quoteproductoffer.quantity.label'|trans }}</th>
                                    <th>{{ 'orob2b.sale.quoteproductoffer.price.label'|trans }}</th>
                                    <th>{{ 'orob2b.sale.quoteproductoffer.column_summary'|trans }}</th>
                                </tr>

                                {% for quoteProductOffer in quoteProduct.quoteProductOffers %}
                                    <tr>
                                        <td>{{ quoteProductOffer.quantity }} {{ quoteProductOffer.productUnit }}</td>
                                        <td>{{ quoteProductOffer.price|oro_format_price }}</td>
                                        <td>{{ quoteProductOffer|orob2b_format_sale_quote_product_offer }}</td>
                                    </tr>
                                {% endfor %}
                                <tr>
                                    <td colspan="3">{{ UI.renderProperty(
                                            'orob2b.sale.quoteproduct.comment.label'|trans,
                                            quoteProduct.comment|default('N/A'|trans)
                                        ) }}</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endset %}
    {% set dataBlocks = [
        {
            'title': 'orob2b.sale.quote.sections.general'|trans,
            'class': 'active',
            'subblocks': [{'data' : [quoteInformationWidget]}]
        },
        {
            'title': 'orob2b.sale.quote.sections.quote_products'|trans,
            'subblocks': [{'data' : [quoteProducts]}]
        }
    ] %}

    {% set id = 'quoteView' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
