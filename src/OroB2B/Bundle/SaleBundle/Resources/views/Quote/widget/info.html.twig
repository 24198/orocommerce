{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}
{% import 'OroB2BAccountBundle::macros.html.twig' as Account %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orob2b.sale.quote.qid.label'|trans, entity.qid) }}
            {{ Account.renderAccountUserProperty('orob2b.sale.quote.account_user.label'|trans, entity.accountUser) }}
            {{ Account.renderAccountProperty('orob2b.sale.quote.account.label'|trans, entity.account) }}

            {{ UI.renderProperty('orob2b.sale.quote.valid_until.label'|trans, entity.validUntil ? entity.validUntil|oro_format_datetime : 'N/A'|trans) }}
            {% if entity.request %}
                {{ UI.renderHtmlProperty('orob2b.sale.quote.request.label'|trans, UI.entityViewLink(entity.request, entity.request, 'orob2b_rfp_request_view')) }}
            {% endif %}
            {{ UI.renderProperty('orob2b.sale.quote.po_number.label'|trans, entity.poNumber|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.sale.quote.ship_until.label'|trans, entity.shipUntil|oro_format_date|default('N/A'|trans)) }}

            {{ Account.renderUsersProperty('orob2b.sale.quote.assigned_users.label'|trans, entity.assignedUsers) }}
            {{ Account.renderAccountUsersProperty('orob2b.sale.quote.assigned_account_users.label'|trans, entity.assignedAccountUsers) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
</div>
