{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {'%identifier%': entity.__toString }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_order_frontend_index'),
        'indexLabel': 'orob2b.frontend.order.entity_plural_label'|trans,
        'entityTitle': entity.__toString|default('N/A'|trans)
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set informationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.frontend.order.widgets.order_information'|trans,
            'url': path('orob2b_order_frontend_info', {'id': entity.id})
        }) }}
    {% endset %}
    {% set lineItems %}
        <div class="order-orderproducts-info control-group">
            <table class="order-orderproduct-collection-table order-orderproduct-collection-table-view">
                <thead>
                    <tr>
                        <th>{{ 'orob2b.frontend.order.orderlineitem.column.product'|trans }}</th>
                        <th>{{ 'orob2b.frontend.order.orderlineitem.quantity.label'|trans }}</th>
                        <th>{{ 'orob2b.frontend.order.orderlineitem.price.label'|trans }}</th>
                        <th>{{ 'orob2b.frontend.order.orderlineitem.column_summary'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for lineItem in entity.lineItems %}
                    <tr>
                        <td>
                            <div>
                                {{ lineItem.productSku }}
                            </div>
                        </td>
                        <td>{{ lineItem.quantity|orob2b_format_product_unit_value(lineItem.productUnit) }}</td>
                        <td>{{ lineItem.price|oro_format_price }}</td>
                        <td>
                            {{ lineItem|orob2b_format_order_line_item }}

                            {% if lineItem.comment is not empty %}
                            {{ UI.renderProperty('orob2b.frontend.order.orderlineitem.comment.label'|trans, lineItem.comment) }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endset %}

    {% set id = 'frontend-order-view' %}

    {% set generalBlock = {
        'title': 'orob2b.frontend.order.sections.general'|trans,
        'class': 'active',
        'subblocks': [{'data' : [informationWidget]}]
    } %}

    {% set lineItemsBlock = {
        'title': 'orob2b.frontend.order.sections.line_items'|trans,
        'subblocks': [{'data' : [lineItems]}]
    } %}

    {% if entity.lineItems | length %}
        {% set data = {'dataBlocks': [generalBlock, lineItemsBlock]} %}
    {% else %}
        {% set data = {'dataBlocks': [generalBlock]} %}
    {% endif %}

    {{ parent() }}
{% endblock content_data %}
