{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%identifier%": entity.identifier }}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_order_index'),
        'indexLabel': 'orob2b.order.entity_plural_label'|trans,
        'entityTitle': 'orob2b.order.navigation.view'|trans({
            '%identifier%': entity.identifier|default('N/A'|trans)
        })
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_order_update', { 'id': entity.id }),
            'entity_label': 'orob2b.order.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_delete_order', {'id': entity.id}),
            'dataRedirect': path('orob2b_order_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.order.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set orderInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.order.widgets.order_information'|trans,
            'url': path('orob2b_order_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [orderInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2b.order.sections.general'|trans,
            'class': 'active',
            'priority': -200,
            'subblocks': generalSectionBlocks
        }
    ] %}

    {% set orderTotals %}
        <div class="widget-content totals-container">
            <div class="row-fluid form-horizontal">
                <div class="responsive-block">
                    {% for item in totals.subtotals %}
                        {% if item.visible %}
                            {{ UI.renderProperty(item.label, item.amount|oro_format_currency({'currency': item.currency})) }}
                        {% endif %}
                    {% endfor %}
                    {{ UI.renderProperty(totals.total.label, totals.total.amount|oro_format_currency({'currency': totals.total.currency})) }}
                </div>
            </div>
        </div>
    {% endset %}

    {% set shippingInformation %}
        {% if entity.shippingCost is not null %}
            {{ UI.renderHtmlProperty('orob2b.order.shipping_cost.label'|trans,
            entity.shippingCost.value|oro_format_currency({'currency': entity.shippingCost.currency})) }}
        {% else %}
            {{ UI.renderHtmlProperty('orob2b.order.shipping_cost.label'|trans, 'N/A'|trans) }}
        {% endif %}
    {% endset %}

    {% set dataBlocks = dataBlocks|merge([{
        'title': 'orob2b.order.sections.shipping_information'|trans,
        'priority': -150,
        'subblocks': [{'data' : [shippingInformation]}]
    }]) %}

    {% set dataBlocks = dataBlocks|merge([{
        'title': 'orob2b.order.sections.order_line_items'|trans,
        'priority': -100,
        'subblocks': [{'data' : [dataGrid.renderGrid('order-line-items-grid', { order_id: entity.id })]}]
    }]) %}

    {% set dataBlocks = dataBlocks|merge([{
        'title': 'orob2b.order.sections.order_totals'|trans,
        'priority': -50,
        'subblocks': [{'data' : [orderTotals]}]
    }]) %}

    {% set id = 'order-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
