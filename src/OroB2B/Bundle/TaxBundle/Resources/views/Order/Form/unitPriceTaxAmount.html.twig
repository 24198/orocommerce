{% set result = form.vars.result|default({}) %}
{% if result.unit is defined and result.unit.taxAmount is defined %}
    <div data-page-component-module="orob2btax/js/app/components/order-line-item-item-component"
         data-page-component-options="{{ {type: 'unit', value: 'taxAmount'}|json_encode }}">
        <span data-value-container>
            {{ result.unit.taxAmount|oro_format_currency({currency: result.unit.currency}) }}
        </span>
        <script type="text/html" id="tax-item-unit-taxAmount">
            <span><%= value %></span>
        </script>
    </div>
{% endif %}
