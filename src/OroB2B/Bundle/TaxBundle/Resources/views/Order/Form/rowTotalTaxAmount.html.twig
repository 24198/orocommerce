{% set result = form.vars.result|default({}) %}
{% if result.row is defined and result.row.taxAmount is defined %}
    <div data-page-component-module="orob2btax/js/app/components/order-line-item-item-component"
         data-page-component-options="{{ {type: 'row', value: 'taxAmount'}|json_encode }}">
        <span data-value-container>
            {{ result.row.taxAmount|oro_format_currency({currency: result.row.currency}) }}
        </span>
        <script type="text/html" id="tax-item-row-taxAmount">
            <span><%= value %></span>
        </script>
    </div>
{% endif %}
