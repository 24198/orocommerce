    <div class="row-oro oro-multiselect-holder well tax-base-exclusion-row{% if not allow_delete %} not-removable{% endif %}" data-content="{{ name }}">
        {% if allow_delete %}
            <button class="removeRow btn btn-action btn-link tax-base-exclusion-remove-row" type="button" data-related="{{ name }}">Ã—</button>
        {% endif %}
        {% if allow_add_after %}
            <button class="addAfterRow btn btn-action btn-link" type="button" data-related="{{ name }}">+</button>
        {% endif %}
        {{ form_widget(form) }}
    </div>
{% endmacro %}

