{% block orob2b_tax_zip_code_collection_type_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set prototype_html = _self.orob2b_tax_zip_code_collection_prototype(form) %}
        {% endif %}
        {% set attr = attr|merge({'class': (attr.class is defined ? attr.class ~ ' ' : '') ~ 'oro-item-collection collection-fields-list' }) %}
        {% set id = id ~ '_collection' %}
        <div class="row-oro">
            {% set prototype_name = form.vars.prototype_name %}
            <div {{ block('widget_container_attributes') }} data-last-index="{{ form.children|length}}" data-row-count-add="{{ form.vars.row_count_add }}" data-prototype-name="{{ prototype_name }}"{% if prototype_html is defined %} data-prototype="{{ prototype_html|escape }}"{% endif %}>
                <table class="grid table-hover table table-bordered">
                    <thead>
                    <tr>
                        <th><span>{{ 'orob2b.tax.zipcode.zip_range_start.label'|trans }}</span></th>
                        <th></th>
                        <th><span>{{ 'orob2b.tax.zipcode.zip_range_end.label'|trans }}</span></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="tax-zip-code-list-items" data-last-index="{{ form.children|length}}" data-prototype-name="{{ prototype_name }}"{% if prototype_html is defined %} data-prototype="{{ prototype_html|escape }}"{% endif %} data-content>
                    {% if form.children|length %}
                        {% for child in form.children %}
                            {{ _self.orob2b_tax_zip_code_collection_prototype(child) }}
                        {% endfor %}
                    {% elseif show_form_when_empty and prototype_html is defined %}
                        {% for i in 0..(form.vars.row_count_initial - 1) %}
                            {{ prototype_html|replace({(prototype_name): i})|raw }}
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
            {% if allow_add %}
                <a class="btn add-list-item" data-container=".oro-item-collection tbody" href="javascript: void(0);"><i class="icon-plus"></i>{{ form.vars.add_label|default('oro.form.collection.add')|trans }}</a>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}

{% macro orob2b_tax_zip_code_collection_prototype(widget) %}
    {% if 'collection' in widget.vars.block_prefixes %}
        {% set form = widget.vars.prototype %}
        {% set name = widget.vars.full_name ~ '[' ~ widget.vars.prototype.vars.name ~ ']' %}
    {% else %}
        {% set form = widget %}
        {% set name = widget.vars.full_name %}
    {% endif %}
    <tr data-content="{{ name }}" data-validation-optional-group {{ block('widget_container_attributes') }}
        class="tax-zip-code-list tax-zip-code-list-item">
        {{ form_widget(form) }}
        <td class="tax-zip-code-list-remove">
            <button type="button" class="removeRow btn icons-holder"><i class="icon-remove"></i></button>
        </td>
    </tr>
{% endmacro %}

{% block orob2b_tax_zip_code_type_widget %}
    <td>{{ form_widget(form.zipRangeStart) }} {{ form_errors(form.zipRangeStart) }}</td>
    <td> - </td>
    <td>{{ form_widget(form.zipRangeEnd) }} {{ form_errors(form.zipRangeEnd) }}</td>
{% endblock %}

{% block _tax_calculation_orob2b_tax___use_as_base_exceptions_value_entry_widget %}
    <td class="tax-base-exception-country">
        <div>{{ form_widget(form.country) }}</div>
        {{ form_errors(form.country) }}
    </td>
    <td class="tax-base-exception-region">
        <div>{{ form_widget(form.region) }}</div>
        {{ form_errors(form.region) }}
    </td>
    <td class="tax-base-exception-option">
        <div>{{ form_widget(form.option) }}</div>
        {{ form_errors(form.option) }}
    </td>
{% endblock %}

{% macro _tax_calculation_orob2b_tax___use_as_base_exceptions_value_item_prototype(widget) %}
    {% if 'collection' in widget.vars.block_prefixes %}
        {% set form = widget.vars.prototype %}
        {% set name = widget.vars.prototype.vars.name %}
        {% set disabled = widget.vars.disabled %}
        {% set allow_delete = widget.vars.allow_delete %}
        {% set allow_add_after = widget.vars.allow_add_after %}
    {% else %}
        {% set form = widget %}
        {% set name = widget.vars.full_name %}
        {% set disabled = widget.parent.vars.disabled %}
        {% set allow_delete = widget.parent.vars.allow_delete %}
        {% set allow_add_after = widget.parent.vars.allow_add_after %}
    {% endif %}
    <tr data-content="{{ name }}" data-validation-optional-group>
        <div class="row-oro oro-multiselect-holder{% if not allow_delete %} not-removable{% endif %}">
            {{ form_widget(form, {disabled: disabled}) }}
            <td class="tax-base-exception-action">
                {% if allow_delete %}
                    <button class="removeRow btn btn-action btn-link" type="button" data-related="{{ name }}">Ã—</button>
                {% endif %}
                {% if allow_add_after %}
                    <button class="addAfterRow btn btn-action btn-link" type="button" data-related="{{ name }}">+</button>
                {% endif %}
            </td>
        </div>
    </tr>
{% endmacro %}

