        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orob2b_attribute_index'),
            'indexLabel': 'orob2b.attribute.entity_plural_label'|trans,
            'entityTitle': entity.code|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.attribute.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'attribute-edit' %}

    {% set dataBlocks = [
        {
            'title': 'orob2b.attribute.form.section.main'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        form_row(form.codeDisabled),
                        form_row(form.typeDisabled),
                        form_row(form.code),
                        form_row(form.type),
                        form_row(form.localized),
                        form_row(form.sharingType),
                        form.required is defined ? form_row(form.required) : null,
                        form.unique is defined ? form_row(form.unique) : null,
                        form.validation is defined ? form_row(form.validation) : null,
                    ]
                },
                {
                    'data': [
                        form_row(form.label),
                    ]
                },
            ]
        },
        {
            'title': 'orob2b.attribute.form.section.data'|trans,
            'subblocks': [
                {
                    'data': [
                        form_row(form.defaultValue),
                    ]
                },
            ]
        },
        {
            'title': 'orob2b.attribute.form.section.additional'|trans,
            'subblocks': [
                {
                    'data': [
                        form.containHtml is defined ? form_row(form.containHtml) : null,
                        form_row(form.onProductView),
                        form_row(form.inProductListing),
                        form_row(form.useInSorting),
                    ]
                },
                {
                    'data': [
                        form.useForSearch is defined ? form_row(form.useForSearch) : null,
                        form_row(form.onAdvancedSearch),
                        form_row(form.onProductComparison),
                        form.useInFilters is defined ? form_row(form.useInFilters) : null,
                    ]
                },
            ]
        },
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
