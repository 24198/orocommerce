{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {"%code%": entity.code|default('N/A'|trans)} }) %}

{% set formAction = entity.id ? path('orob2b_attribute_update', { 'id': entity.id }) : path('orob2b_attribute_init') %}

{% block navButtons %}
    {% if entity.id and not entity.system and resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_delete_attribute', {'id': entity.id}),
            'dataRedirect': path('orob2b_attribute_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-attribute',
            'entity_label': 'orob2b.attribute.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('orob2b_attribute_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if entity.id or resource_granted('orob2b_attribute_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('orob2b_attribute_index'),
            'indexLabel': 'orob2b.attribute.entity_plural_label'|trans,
            'entityTitle': entity.code|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.attribute.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'attribute-edit' %}

    {% set dataBlocks = [
        {
            'title': 'orob2b.attribute.section.general'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        form_row(form.codeDisabled),
                        form_row(form.typeDisabled),
                        form_row(form.code),
                        form_row(form.type),
                        form_row(form.localized),
                        form_row(form.sharingType),
                        form.required is defined ? form_row(form.required) : null,
                        form.unique is defined ? form_row(form.unique) : null,
                        form.validation is defined ? form_row(form.validation) : null,
                    ]
                },
                {
                    'data': [
                        form_row(form.label),
                    ]
                },
            ]
        },
        {
            'title': 'orob2b.attribute.section.data'|trans,
            'subblocks': [
                {
                    'data': [
                        form.defaultValue is defined ? form_row(form.defaultValue) : null,
                        form.defaultOptions is defined ? form_row(form.defaultOptions) : null,
                    ]
                },
            ]
        },
        {
            'title': 'orob2b.attribute.section.additional'|trans,
            'subblocks': [
                {
                    'data': [
                        form.containHtml is defined ? form_row(form.containHtml) : null,
                        form_row(form.onProductView),
                        form_row(form.inProductListing),
                        form_row(form.useInSorting),
                    ]
                },
                {
                    'data': [
                        form.useForSearch is defined ? form_row(form.useForSearch) : null,
                        form_row(form.onAdvancedSearch),
                        form_row(form.onProductComparison),
                        form.useInFilters is defined ? form_row(form.useInFilters) : null,
                    ]
                },
            ]
        },
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {{ parent() }}
{% endblock content_data %}
