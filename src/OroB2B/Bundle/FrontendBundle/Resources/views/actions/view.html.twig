{% extends 'OroUIBundle:actions:view.html.twig' %}

{% block pageActions %}
    {% placeholder frontend_view_pageActions_before with {entity: entity} %}

    {% set audit_entity_id = audit_entity_id is defined ? audit_entity_id : entity.id|default %}
    {% if audit_entity_id %}
        {% placeholder frontend_change_history_block with {
        'entity': entity,
        'entity_class': audit_entity_class|default(null),
        'id': audit_entity_id,
        'title': audit_title|default(entity.__toString is defined ? entity : null),
        'audit_path': audit_path|default('orob2b_frontend_dataaudit_history'),
        'audit_show_change_history': audit_show_change_history|default(false)
        } %}
    {% endif %}

    {% placeholder frontend_view_pageActions_after with {entity: entity} %}
{% endblock pageActions %}
