{%- macro renderAccountProperty(label, entity, labelProperty, route) -%}
    {% import 'OroUIBundle::macros.html.twig' as UI %}
    {% if entity %}
        {{ UI.renderProperty(label, entity, labelProperty, 'none') }}
    {% endif %}
{%- endmacro -%}

{%- macro renderAccountUserProperty(label, entity, labelProperty, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as A %}
    {% if entity and is_granted_view_account_user(entity) %}
        {{ A.renderAccountUserProperty(label, entity, labelProperty, route|default('orob2b_account_frontend_account_user_view')) }}
    {% endif %}
{%- endmacro -%}

{%- macro renderAccountUsersProperty(label, entities, labelProperty, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as A %}
    {% if entities | length %}
        {{ A.renderAccountUsersProperty(label, entities, labelProperty, route|default('orob2b_account_frontend_account_user_view')) }}
    {% endif %}
{%- endmacro -%}

{%- macro renderUsersProperty(label, entities, labelProperty, route) -%}
    {% import 'OroUserBundle::macros.html.twig' as U %}
    {% if entities | length %}
        {{ U.renderUsersProperty(label, entities, labelProperty, 'none') }}
    {% endif %}
{%- endmacro -%}
