{%- macro renderAccountProperty(label, entity, property, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as UI %}
    {% if entity %}
        {{ UI.renderProperty(label, entity, property, 'none') }}
    {% endif %}
{%- endmacro -%}

{%- macro renderAccountUserProperty(label, entity, property, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as UI %}
    {% if entity and is_granted_view_account_user(entity) %}
        {{ UI.renderAccountUserProperty(label, entity, property, route|default('orob2b_account_frontend_account_user_view')) }}
    {% endif %}
{%- endmacro -%}

{%- macro renderAccountUsersProperty(label, entities, property, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as UI %}
    {% if entities | length %}
        {{ UI.renderAccountUsersProperty(label, entities, property, route|default('orob2b_account_frontend_account_user_view')) }}
    {% endif %}
{%- endmacro -%}

{%- macro renderUsersProperty(label, entities, property, route) -%}
    {% import 'OroB2BAccountBundle::macros.html.twig' as UI %}
    {% if entities | length %}
        {{ UI.renderUsersProperty(label, entities, property, 'none') }}
    {% endif %}
{%- endmacro -%}

