{% block _checkout_form_fields_widget -%}
    {% set workflowItem = checkout.workflowItem %}
    <div>
        You exceeded the allowable amount of $5,000.00. <br/>
        To proceed please request manager approval.
    </div>

    <fieldset class="checkout__form__row">
        <div class="checkout__form__col form__col_x6 mmb5-md mmb5-sm">
            {{ form_row(form.request_approval_notes, {'attr': {'class': 'input input_md input_block checkout__form__input', 'placeholder': 'orob2b.checkout.order_review.note_placeholder'|trans}}) }}
        </div>
    </fieldset>

    {{ block_widget(block) }}
{%- endblock %}