{% extends 'OroUIBundle:actions:update.html.twig' %}

{% if form.vars.value.id %}
    {% oro_title_set({params : {"%title%": form.vars.value.defaultTitle.string} }) %}
{% endif %}

{% set formAction = form.vars.value.id ? path('orob2b_catalog_category_update', { 'id': form.vars.value.id }) : path('orob2b_catalog_category_create', { 'id': form.vars.value.parentCategory.id })  %}

{% block navButtons %}
    {% if form.vars.value.id %}
        {% if resource_granted('orob2b_catalog_category_create') %}
            {{ UI.button({
                'path' : path('orob2b_catalog_category_create', { 'id': form.vars.value.id }),
                'iCss': 'icon-folder-close',
                'aCss': 'btn-primary',
                'label': 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.catalog.subcategory.entity_label'|trans}),
                'title': 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.catalog.subcategory.entity_label'|trans})
            }) }}
        {% endif %}
        {% set canBeDeleted = resource_granted('DELETE', form.vars.value) and form.vars.value.id != rootCategory.id %}
        {% if canBeDeleted %}
            {{ UI.deleteButton({
                'dataUrl': path('orob2b_api_delete_category', {'id': form.vars.value.id}),
                'dataRedirect': path('orob2b_catalog_category_index'),
                'aCss': 'no-hash remove-button',
                'dataId': form.vars.value.id,
                'id': 'btn-remove-account',
                'entity_label': 'orob2b.catalog.category.entity_label'|trans,
            }) }}
        {% endif %}
        {% if resource_granted('orob2b_catalog_category_create') or canBeDeleted %}
            {{ UI.buttonSeparator() }}
        {% endif %}
    {% endif %}

    {{ UI.cancelButton(path('orob2b_catalog_category_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if form.vars.value.id or resource_granted('orob2b_catalog_category_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orob2b_catalog_category_index'),
            'indexLabel': 'orob2b.catalog.category.entity_plural_label'|trans,
            'entityTitle': form.vars.value.defaultTitle.string|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.catalog.category.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'category-edit' %}

    {% set dataBlocks = [{
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.parentCategory),
                    form_row(form.titles)
                ]
            }]
        }]
    %}
    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    <div class="category-container">
        <div class="category category-tree">
            {% set treeOptions = {
                'data' : orob2b_category_list(),
                'categoryId' : form.vars.value.id ? form.vars.value.id : form.vars.value.parentCategory.id,
                'dndEnabled' : resource_granted('orob2b_catalog_category_update')
            } %}
            <div
                data-page-component-module="orob2bcatalog/js/app/components/tree-manage-component"
                data-page-component-options="{{ treeOptions|json_encode }}"
            ></div>
        </div>
    </div>
    <div class="category-data">
        {{ parent() }}
    </div>
{% endblock content_data %}
